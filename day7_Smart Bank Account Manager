#include <stdio.h>

int main() {
    int choice;
    float balance = 10000; // initial balance
    float amount;
    float bonus = 300;
    float service_charge = 5;

    while (1) {
        printf("\n----- Banking Menu -----\n");
        printf("1. Deposit\n");
        printf("2. Withdraw\n");
        printf("3. Check Balance\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter amount to deposit: ");
                scanf("%f", &amount);
                balance += amount + bonus - service_charge;
                printf("Bonus of ₹%.0f added!\n", bonus);
                printf("Service charge ₹%.0f applied.\n", service_charge);
                printf("Updated Balance: ₹%.2f\n", balance);
                break;

            case 2:
                printf("Enter amount to withdraw: ");
                scanf("%f", &amount);
                if (amount + service_charge > balance) {
                    printf("Insufficient balance!\n");
                } else {
                    balance -= (amount + service_charge);
                    printf("Service charge ₹%.0f applied.\n", service_charge);
                    printf("Updated Balance: ₹%.2f\n", balance);
                }
                break;

            case 3:
                printf("Current Balance: ₹%.2f\n", balance);
                break;

            case 4:
                printf("Thank you for banking with us!\n");
                return 0;

            default:
                printf("Invalid choice! Please try again.\n");
        }
    }

    return 0;
}

#include <stdio.h>

#define MAX 30
#define SPEED_LIMIT 80

// -------- Function Prototypes --------
void inputData(int vehicleID[], int speed[], int lane[], int *n);
int countSpeedViolations(int speed[], int n);
int countLaneViolations(int vehicleID[], int lane[], int n);
int busiestLane(int laneCount[]);
int leastBusyLane(int laneCount[]);
void displayReport(int vehicleID[], int speed[], int lane[], int n);

// -------------------------------------
int main() {
    int vehicleID[MAX], speed[MAX], lane[MAX];
    int n;

    inputData(vehicleID, speed, lane, &n);
    displayReport(vehicleID, speed, lane, n);

    return 0;
}

// -------- Input Data Function --------
void inputData(int vehicleID[], int speed[], int lane[], int *n) {
    printf("Enter number of vehicles (max 30): ");
    scanf("%d", n);

    if (*n > MAX) {
        printf("Too many vehicles! Limiting to 30.\n");
        *n = MAX;
    }

    for (int i = 0; i < *n; i++) {
        printf("\nVehicle %d ID: ", i + 1);
        scanf("%d", &vehicleID[i]);

        // speed validation
        do {
            printf("Speed (positive): ");
            scanf("%d", &speed[i]);
        } while (speed[i] <= 0);

        // lane validation
        do {
            printf("Lane (1â€“4): ");
            scanf("%d", &lane[i]);
        } while (lane[i] < 1 || lane[i] > 4);
    }
}

// -------- Speed Violation Checker --------
int countSpeedViolations(int speed[], int n) {
    int count = 0;

    for (int i = 0; i < n; i++) {
        if (speed[i] > SPEED_LIMIT)
            count++;
    }
    return count;
}

// -------- Lane Violation Checker --------
int countLaneViolations(int vehicleID[], int lane[], int n) {
    int count = 0;

    for (int i = 0; i < n; i++) {
        int rule = vehicleID[i] % 4;
        if (rule == 0) rule = 4;

        if (rule != lane[i])
            count++;
    }
    return count;
}

// -------- Identify Busiest Lane --------
int busiestLane(int laneCount[]) {
    int index = 0;

    for (int i = 1; i < 4; i++) {
        if (laneCount[i] > laneCount[index])
            index = i;
    }
    return index + 1;
}

// -------- Identify Least Busy Lane --------
int leastBusyLane(int laneCount[]) {
    int index = 0;

    for (int i = 1; i < 4; i++) {
        if (laneCount[i] < laneCount[index])
            index = i;
    }
    return index + 1;
}

// -------- Full Traffic Report Display --------
void displayReport(int vehicleID[], int speed[], int lane[], int n) {

    int laneCount[4] = {0};
    int speedViol = countSpeedViolations(speed, n);
    int laneViol = countLaneViolations(vehicleID, lane, n);

    // calculate lane counts
    for (int i = 0; i < n; i++) {
        laneCount[lane[i] - 1]++;
    }

    int busyLane = busiestLane(laneCount);
    int leastLane = leastBusyLane(laneCount);

    printf("\n================ Traffic Report ================\n");
    printf("VehID\tSpeed\tLane\tSpeedViolation\tLaneViolation\n");

    for (int i = 0; i < n; i++) {
        int speedV = speed[i] > SPEED_LIMIT;

        int rule = vehicleID[i] % 4;
        if (rule == 0) rule = 4;
        int laneV = (rule != lane[i]);

        printf("%d\t%d\t%d\t%d\t\t%d\n",
               vehicleID[i], speed[i], lane[i], speedV, laneV);
    }

    printf("\nTotal Speed Violations : %d", speedViol);
    printf("\nTotal Lane Violations  : %d", laneViol);

    printf("\nBusiest Lane           : %d", busyLane);
    printf("\nLeast Busy Lane        : %d", leastLane);
    printf("\nTotal Traffic Volume   : %d", n);

    printf("\n================================================\n");
}



